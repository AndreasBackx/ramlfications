#%RAML 0.8
title: Spotify Web API Demo - Traits
version: v1
protocols: [ HTTPS ]
baseUri: https://api.spotify.com/{version}
traits:
  - paged:
      usage: Apply this trait to any method that supports pagination
      headers:
        X-Foo-Bar:
          displayName: FooBar Header
          description: |
            Some foobar header example
          type: string
          required: true
          minLength: 30
          maxLength: 30
          example: abcdefghijabcdefghijabcdefghij
      queryParameters:
        limit:
          displayName: Limit
          description: The maximum number of track objects to return
          type: integer
          example: 10
          minimum: 0
          default: 20
          maximum: 50
          required: false
        offset:
          displayName: Offset
          description: The index of the first track to return
          type: integer
          example: 5
          default: 0
          required: false
/users/{user_id}/playlists:
  uriParameters:
    user_id:
      displayName: User ID
      type: string
      description: The user's Spotify user ID.
      example: smedjan
  displayName: playlists
  is: [ paged ]
  get:
    description: |
      [Get a List of a User's Playlists](https://developer.spotify.com/web-api/get-list-users-playlists/)
    responses:
      200:
        body:
          application/json:
            schema: |
              {
                "$schema": "http://json-schema.org/draft-03/schema",
                "type": "array",
                "items": {
                  "$ref": "schemas/playlist.json"
                }
              }
