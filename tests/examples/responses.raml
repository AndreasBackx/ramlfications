#%RAML 0.8
title: Spotify API
version: v1
baseUri: https://api.spotify.com/{version}
/media/popular:
  displayName: popular-media
  get:
    description: |
      Get a list of what media is most popular at the moment.
    responses:
      200:
        body:
          application/json:
            schema: !include includes/post-playlist-schema.json
      503:
        description: |
          The service is currently unavailable or you exceeded the maximum requests
          per hour allowed to your application.
        headers:
          X-waiting-period:
            description: |
              The number of seconds to wait before you can attempt to make a request again.
            type: integer
            required: yes
            minimum: 1
            maximum: 3600
            example: 34
        body:
          application/json:
            schema: !include includes/post-playlist-example.json
